{
  "name": "mqtt",
  "type": "flogo:activity",
  "ref": "github.com/mbestazza/flogo-components/activity/mqtt",
  "version": "0.0.1",
  "title": "Send MQTT Message with SSL",
  "description": "Pubishes message on MQTT (SSL) topic",
  "author": "Massimo Bestazza <massimo.bestazza@tibco.com>",
  "input":[
   {
      "name": "broker",
      "type": "string"
    },
    {
      "name": "id",
      "type": "string"
    },
    {
      "name": "user",
      "type": "string"
    },
    {
      "name": "password",
      "type": "string"
    },
    {
      "name": "topic",
      "type": "string"
    },
    {
      "name": "qos",
      "type": "integer",
      "allowed" : ["0", "1", "2"]
    },
    {
      "name": "message",
      "type": "string"
    }
  ],
  "output": [
    {
      "name": "result",
      "type": "string"
    }
  ]
}
